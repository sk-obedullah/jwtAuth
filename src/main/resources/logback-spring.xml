<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Log directory and file name -->
    <property name="LOG_PATH" value="logs" />
    <property name="LOG_FILE" value="${LOG_PATH}/ssaa.log" />

    <!-- Console Appender (optional: keep logs in console as well) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Rolling File Appender (daily rotation) -->
    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily log file: application-2025-08-15.log -->
            <fileNamePattern>${LOG_PATH}/ssaa-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory> <!-- keep last 30 days -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger (captures everything: Spring, Hibernate, Security, your app) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ROLLING_FILE"/>
    </root>

    <!-- Your project logs -->
    <logger name="com.ssaa" level="DEBUG" additivity="false">
        <appender-ref ref="ROLLING_FILE"/>
    </logger>

    <!-- Hibernate SQL logs -->
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="ROLLING_FILE"/>
    </logger>

    <!-- Hibernate parameters (values bound to queries) -->
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
        <appender-ref ref="ROLLING_FILE"/>
    </logger>

    <!-- Spring Security logs -->
    <logger name="org.springframework.security" level="DEBUG" additivity="false">
        <appender-ref ref="ROLLING_FILE"/>
    </logger>

</configuration>
